{ 
    "manifest_version": 3, 
    "name": "WebbApp Overlay", 
    "description": "TBD", 
    "version": "1.0", 
    "author": "Bradford James",
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "MacCtrl+Shift+E"
            },
            "description": "Launch overlay in current window"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_title": "Click to show overlay"
    }
}
